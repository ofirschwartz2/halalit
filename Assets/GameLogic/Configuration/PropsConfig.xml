  </PickupClawController>

  <PickupClawMovement>
    <_velocityMultiplier>2.5</_velocityMultiplier>
    <_rotationToItemMultiplier>3</_rotationToItemMultiplier>
    <_rotationToHalalitMultiplier>0.5</_rotationToHalalitMultiplier>
    <_moveToItemMultiplier>0.5</_moveToItemMultiplier>
