	</ZigZagEnemyMovement>

	<SinusEnemyMovement>
		<_sinAxisMovementAmplitude>0.5</_sinAxisMovementAmplitude>
		<_otherAxisMovementAmplitude>2</_otherAxisMovementAmplitude>
		<_changeSinForceInterval>2</_changeSinForceInterval>
		<_otherAxisSpeedLimit>2</_otherAxisSpeedLimit>
	</SinusEnemyMovement>
	
	<GreekEnemyMovement>
		<_movementAmplitude>2</_movementAmplitude>
		<_changeGreekDirectionInterval>1</_changeGreekDirectionInterval>
	</GreekEnemyMovement>

	<FollowingEnemyMovement>
