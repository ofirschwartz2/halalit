  <EnemyFactory>
    <MaxNumberOfEnemies>30</MaxNumberOfEnemies>
    <NumberOfEnemies>20</NumberOfEnemies>
  </EnemyFactory>

	<LameEnemyMovement>
		<_movementAmplitude>1</_movementAmplitude>
		<_speedLimit>1</_speedLimit>
	</LameEnemyMovement>

	<ZigZagEnemyMovement>
		<_movementAmplitude>2</_movementAmplitude>
		<_changeZigZagDirectionInterval>1</_changeZigZagDirectionInterval>
